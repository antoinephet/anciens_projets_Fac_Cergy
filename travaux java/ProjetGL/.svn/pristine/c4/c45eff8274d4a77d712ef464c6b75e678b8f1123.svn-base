package genie;

import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.Rectangle;

import javax.swing.ImageIcon;



public class Intrus extends Entite{ 
	//protected int x; // public
	//private int y;
	private int speed = 5;
	private String image = "/images/intrus.png";
	private int choix = (int)(Math.random()*4+1);
	
	
	public Intrus(int x, int y) {
		super(x,y);
		//this.x= x;
		//this.y = y;
	}




	public void update(){
		// vitesse deplacement rectiligne et horizontal de l'ennemi 
		if(choix == 1){
			x+=speed;
			}else if(choix == 2){
				x-=speed;
			}else if(choix == 3){
				y-=speed;
			}else if(choix == 4){
				y+=speed;
			}
		
		
		if(x > (1082 - 34)){
			speed = -5;
		}
		if(x < (0 + 34)){
			speed = 5;
		}
		
		if(y > (612)){
			speed = -5;
		}
		if(y < (0 + 34)){
			speed = 5;
		}
		
		try {
			Thread.sleep(0);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public Rectangle getBounds(){
		return new Rectangle(x, y, 32, 32);
	}
	
	public void draw(Graphics2D g2d){
		// dessine l'ennemi
		g2d.drawImage(getIntrusImage(), x, y, null);
		
		
	}
	
	public Image getIntrusImage(){
		
		// retourne l'image instancié
		ImageIcon i = new ImageIcon(getClass().getResource(image));
		return i.getImage();
		
	}
	
	
	


}

